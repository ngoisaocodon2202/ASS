<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>FastFood Store</title>

    <!-- Bootstrap CDN -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />

    <style>
        body { padding-top: 80px; }
        .nav-link { font-weight: bold; }
        .food-card img { height: 150px; object-fit: cover; }
    </style>
</head>
<body>

    <!-- HEADER -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/Home/Index">FASTFOOD STORE</a>

            <button class="navbar-toggler" type="button"
                    data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">

                <ul class="navbar-nav me-auto">

                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Category?id=1">Đồ uống</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Category?id=2">Bánh ngọt</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Category?id=3">Đồ ăn nhanh</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/Index">Quản lý món ăn</a>
                    </li>

                </ul>

                <ul class="navbar-nav ms-auto">
                    @if (Context.Session.GetString("UserName") != null)
                    {
                        <li class="nav-item">
                            <span class="nav-link text-warning">
                                Xin chào, @Context.Session.GetString("UserName")
                            </span>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-danger btn-sm" href="/Auth/Logout">Đăng xuất</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="btn btn-success btn-sm me-2" href="/Auth/Login">Đăng nhập</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-primary btn-sm" href="/Auth/Register">Đăng ký</a>
                        </li>
                    }
                </ul>

            </div>
        </div>
    </nav>

    <!-- BODY -->
    <div class="container">
        @RenderBody()
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
